<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kdl"
    tools:context="com.softwares.kdl.Dairy.NewA">

    <Spinner
        android:id="@+id/selectCust"
        android:layout_width="200dp"
        android:layout_height="30dp"

        android:layout_below="@+id/scrollView2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/textView31"
        android:background="@drawable/background_round_corner_edittext"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/selectCust"
        android:layout_marginStart="55dp"
        android:layout_toEndOf="@+id/textView3"
        android:text="मालकाचे नाव  :"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView2">

</ScrollView>

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/textView31"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="174dp"
        android:background="@color/colorAccent"
        android:onClick="send"
        android:text="पाठवा"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/selectCust"
        android:layout_alignTop="@+id/button4"
        android:layout_marginEnd="33dp"
        android:background="@android:color/holo_red_light"
        android:onClick="hatva"
        android:text="हटवा"
        android:textColor="@android:color/background_light"
        android:textSize="16dp" />

</RelativeLayout>
